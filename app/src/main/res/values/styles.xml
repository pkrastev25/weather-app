<resources>

    <!-- BASE-APPLICATION-THEME region -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Color the toolbar -->
        <item name="colorPrimary">@color/primary</item>
        <!-- Color the status bar -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!-- Color the cursors -->
        <item name="colorAccent">@color/primary_light</item>
        <!-- Color the background of all activities, fragments -->
        <item name="android:windowBackground">@color/white</item>
        <!-- Color all the text -->
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <!-- BASE-APPLICATION-THEME region -->
    <!-- ****************************************************** -->
    <!-- TEXT region -->

    <style name="Text" parent="AppTheme">
        <item name="android:paddingLeft">@dimen/space_L</item>
        <item name="android:paddingRight">@dimen/space_L</item>
    </style>

    <style name="Text.XL">
        <item name="android:textSize">@dimen/text_size_XL</item>
        <item name="android:paddingTop">@dimen/space_XL</item>
        <item name="android:paddingBottom">@dimen/space_XL</item>
    </style>

    <style name="Text.XL.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.L">
        <item name="android:textSize">@dimen/text_size_L</item>
        <item name="android:paddingTop">@dimen/space_L</item>
        <item name="android:paddingBottom">@dimen/space_L</item>
    </style>

    <style name="Text.L.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.M">
        <item name="android:textSize">@dimen/text_size_M</item>
        <item name="android:paddingTop">@dimen/space_M</item>
        <item name="android:paddingBottom">@dimen/space_M</item>
    </style>

    <style name="Text.M.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.M.BoldItalic">
        <item name="android:textStyle">bold|italic</item>
    </style>

    <!-- End of TEXT region -->
    <!-- ****************************************************** -->
    <!-- RECYCLER-VIEW region -->

    <style name="RecyclerView" parent="OverlappingView">
        <item name="android:paddingBottom">@dimen/space_L</item>
        <item name="android:paddingTop">@dimen/space_L</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <!-- ****************************************************** -->
    <!-- RECYCLER-ITEMS region -->

    <style name="RecyclerItems" parent="AppTheme">
        <item name="android:padding">@dimen/space_L</item>
    </style>

    <style name="RecyclerItems.Location">
        <item name="android:padding">0dp</item>
    </style>

    <style name="RecyclerItems.Forecast">
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">@dimen/space_XL</item>
    </style>

    <!-- End of RECYCLER-ITEMS region -->
    <!-- ****************************************************** -->
    <!-- TOOLBAR region -->

    <style name="Toolbar" parent="AppTheme">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="Toolbar.Icon" parent="Icon">
        <item name="android:left">@dimen/space_S</item>
        <item name="android:paddingRight">@dimen/space_S</item>
    </style>

    <style name="Toolbar.Text" parent="Text.XL.Bold">
        <item name="android:textColor">@color/primary_contrast</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Toolbar.SearchView">
        <!-- Color the text -->
        <item name="android:textColorPrimary">@color/primary_contrast</item>
        <!-- Color the icons -->
        <item name="android:textColorSecondary">@color/white</item>
        <!-- Color the query text -->
        <item name="android:textColorHint">@color/white_opacity_50</item>
        <item name="android:textSize">@dimen/text_size_XL</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- End of TOOLBAR region -->
    <!-- ****************************************************** -->
    <!-- SETTINGS region -->

    <style name="Settings" parent="AppTheme"/>

    <style name="Settings.ToggleButton">
        <item name="android:layout_marginRight">@dimen/space_L</item>
    </style>

    <!-- End of SETTINGS region -->
    <!-- ****************************************************** -->
    <!-- ERROR-VIEW region -->

    <style name="ErrorView" parent="AppTheme"/>

    <style name="ErrorView.Text" parent="Text.L.Bold">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:padding">@dimen/space_L</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ErrorView.Banner" parent="ErrorView.Text">
        <item name="android:background">@color/primary_dark</item>
        <item name="android:textColor">@color/primary_dark_contrast</item>
    </style>

    <!-- End of ERROR-VIEW region -->
    <!-- ****************************************************** -->
    <!-- OVERLAPPING-VIEW region -->

    <style name="OverlappingView" parent="AppTheme">
        <item name="android:background">@color/white</item>
    </style>

    <!-- End of OVERLAPPING-VIEW region -->
    <!-- ****************************************************** -->
    <!-- PAGER-TAB-STRIP region -->

    <style name="ForecastPagerTabStrip" parent="AppTheme">
        <item name="android:background">@color/primary_light</item>
        <item name="android:textColor">@color/primary_light_contrast</item>
        <item name="android:textSize">@dimen/text_size_M</item>
        <item name="android:paddingTop">@dimen/space_M</item>
        <item name="android:paddingBottom">@dimen/space_M</item>
    </style>

    <!-- End of PAGER-TAB-STRIP region -->
    <!-- ****************************************************** -->
    <!-- ICONS region -->

    <style name="Icon" parent="AppTheme"/>

    <!-- Must be used together with a black color icon -->
    <style name="Icon.WhiteTinted">
        <item name="android:tint">@color/white_opacity_50</item>
    </style>

    <!-- Must be used together with a white color icon -->
    <style name="Icon.BlackTinted">
        <item name="android:tint">@color/black_opacity_50</item>
    </style>

    <!-- End of ICONS region -->
    <!-- ****************************************************** -->

</resources>
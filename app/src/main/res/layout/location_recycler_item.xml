<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="item"
            type="com.petar.weather.logic.models.ALocation"/>

        <import type="com.petar.weather.util.FormatUtil"/>
    </data>

    <LinearLayout
        style="@style/RecyclerItems.Location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> item.onItemClick()}">

        <TextView
            style="@style/Text.L.Bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@{item.title}"/>

        <TextView
            style="@style/Text.L"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@{FormatUtil.formatDistance(item.distance)}"/>
    </LinearLayout>
</layout>